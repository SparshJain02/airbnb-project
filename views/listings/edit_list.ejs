<%-layout("layouts/boilerplate.ejs")%>
<body>
    <div class="row">
        <div class="col col-md-8 offset-2">
            <br>
            <form action="/listings/<%=list._id%>?_method=PUT" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
                <div class="mb-3" >
                    <label class="form-label" for="title">Title:</label>
                    <input type="text" name="listing[title]" placeholder="Enter the catchy titile" class="form-control" id="title" value="<%=list.title%>" required>
                    <div class="invalid-feedback">Title is missing </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="desc">Description: </label>
                    <textarea type="text" name="listing[description]" placeholder="Enter the description" class="form-control" id="desc" required><%=list.description%></textarea>
                        <div class="invalid-feedback">Description is missing</div>
                </div>
                <div class="mb-3">
                    <b>Orignal Image</b> <br>
                    <img src=<%=orignalUrl%> >
                </div>
                <div class="mb-3">
                    <label class="form-label" for="img">Upload Image:</label>
                    <input type="file" name="listing[image]"  class="form-control" id="img">
                </div>

                <div class="row mb-3">
                    <div class="col col-md-6 col-12">
                        <label class="form-label" id="price">Price: </label>
                        <input type="number" name="listing[price]" placeholder="eg: 1200" class="form-control" for="price" id="price" value=<%=list.price%> required>
                        <div class="invalid-feedback">Price is invalid</div>
                    </div>
                    <div class="col col-md-6 col-12">
                        <label for="loc" class="form-label">Location: </label>
                        <input type="text" name="listing[location]" placeholder="eg: Bilaspur,Chattisgarh" class="form-control" id="location"value= "<%=list.location%>" required>
                        <div class="invalid-feedback">Location is required</div>
                    </div>
                </div>                
                <div class="mb-3">
                    <label class="form-label" for="country">Country: </label>
                    <input type="text" name="listing[country]" placeholder="eg: India" class="form-control" id="country" value="<%=list.country%>" required>
                    <div class="invalid-feedback">Enter the country name</div>
                </div>
                <br><br>
                <button class="btn add-btn">Submit </button>
                <br><br>
            </form>
        </div>  
    </div>
</body>

