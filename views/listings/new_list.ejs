<%-layout("layouts/boilerplate.ejs")%>
<body>
    <br><br>
    <div class="row">
        <div class="col col-md-8 offset-2">
            <h3>New Listing</h3>
            <br>
            <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input type="text" name="listing[title]" placeholder="Enter the catchy titile" class="form-control" id="title" required >
                    <div class="invalid-feedback">Title is missing</div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="desc">Description: </label>
                    <textarea type="text" name="listing[description]" placeholder="Enter the description" class="form-control" id="desc" required></textarea >
                        <div class="invalid-feedback">Description is missing</div>
                </div>

                    <div class="mb-3">
                        <label class="form-label" for="img">Upload Image</label>
                        <input type="file" name="listing[image]" placeholder="link/url" class="form-control" id="img">
                    </div>
                    <div class="row mb-3">
                        <div class="col col-md-6 col-12">
                            <label class="form-label" id="price">Price: </label>
                            <input type="text" name="listing[price]" placeholder="1200" class="form-control" for="price" id="price" required>
                            <div class="invalid-feedback">Enter valid price </div>
                        </div>
                        <div class="col col-md-6 col-12">
                            <label for="loc" class="form-label">Location: </label>
                            <input type="text" name="listing[location]" placeholder="Bilaspur,Chattisgarh" class="form-control" id="location" required>
                            <div class="invalid-feedback">Location is reqiured</div>

                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="country">Country: </label>
                        <input type="text" name="listing[country]" placeholder="India" class="form-control" id="country" required>
                        <div class="invalid-feedback">Enter the country name</div>
                    </div>
                    <br><br>
                    <button class="btn add-btn">Add</button>
                    <br><br>
                </form>
            </div>  
        </div>
</body>
