<%- layout("layouts/boilerplate.ejs") %>
<div class="row mt-4">
    <h3 class="col col-md-4 offset-5 mb-3" > Sign up </h3>
    <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="col col-md-4 offset-4  mb-2">
            <label class="form-label" for="user">Username:</label>
            <input type="text" name="username" class="form-control" id="user" required >
            <div class="invalid-feedback">Username is missing</div>
        </div>
        <div class="col col-md-4 offset-4 mb-2">
            <label class="form-label" for="email">Email:</label>
            <input type="email" name="email" class="form-control" id="email" required >
            <div class="invalid-feedback">Email is missing</div>
        </div>
        <div class="col col-md-4 offset-4 mb-5">
            <label class="form-label" for="pass">Password:</label>
            <input type="password" name="password" class="form-control" id="pass" required >
            <div class="invalid-feedback">Password is missing</div>
        </div>
        <button class="btn btn-success col offset-4 mb-2"> Submit</button>
    </form>
</div>